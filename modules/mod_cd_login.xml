  <files>
    <filename module="mod_cd_login">mod_cd_login.php</filename>
    <filename>mod_cd_login/index.html</filename>
    <filename>mod_cd_login/license-cc-nc.txt</filename>
    <filename>mod_cd_login/css/index.html</filename>
    <filename>mod_cd_login/css/mod_cd_login.css</filename>
    <filename>mod_cd_login/images/cd_login.png</filename>
    <filename>mod_cd_login/images/cd_login_moduletitle.png</filename>
    <filename>mod_cd_login/images/cd_login-button-bg.png</filename>
    <filename>mod_cd_login/images/cd_login-input-password.png</filename>
    <filename>mod_cd_login/images/cd_login-input-username.png</filename>
    <filename>mod_cd_login/images/cd_login-login.png</filename>
    <filename>mod_cd_login/images/cd_login-logout.png</filename>
    <filename>mod_cd_login/images/cd_login_module_logo.png</filename>
    <filename>mod_cd_login/images/index.html</filename>
    <filename>mod_cd_login/languages/czech.php</filename>
