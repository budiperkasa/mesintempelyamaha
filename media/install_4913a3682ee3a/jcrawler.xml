<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.4">
	<name>JCrawler</name>
	<creationDate>2008 06 20</creationDate>
	<author>Patroick Winkler</author>
	<authorEmail>patrick@pixelschieber.ch</authorEmail>
	<authorUrl>http://www.pixelschieber.ch/jcrawler</authorUrl>
	<copyright>Pixelschieber 2008</copyright>
	<license>GNU</license>
	<!--  The version string is recorded in the components table -->
	<version>1.1 Beta</version>
	<!-- The description is optional and defaults to the name -->
	<description>Crawls all URLs of your Joomla-Site and generates a Sitemap XML file.</description>

	<administration>
	
		<!-- Administration Menu Section -->
		<menu img="components/com_jcrawler/images/crawl.gif">JCrawler</menu>
		
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		
	<files folder="com_jcrawler">
		<filename>index.html</filename>
		<filename>admin.jcrawler.html.php</filename>
		<filename>admin.jcrawler.php</filename>
		<filename>toolbar.jcrawler.html.php</filename>
		<filename>toolbar.jcrawler.php</filename>
		<filename>sitemap.xsl</filename>
	</files>
	<images folder="com_jcrawler">
		<filename>images/crawl.gif</filename>					<filename>images/crawl_big.gif</filename>
	</images>	
	</administration>
</install>